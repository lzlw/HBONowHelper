{
  "manifest_version": 2,

  "name": "Improve HBO NOW UI",
  "description": "Adds improvements to HBO NOW's web interface",
  "author": "Lazlow Carmichael",
  "version": "0.3",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": "img/icon48.png",
    "default_title": "Improve HBO NOW UI"
  },

  "content_scripts": [
    {
      "matches": ["https://www.hbonow.com/*"],
      "js": ["js/jquery-3.1.1.js", "js/hbonowhelper.js"],
      "css": ["css/styles.css"],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"]
  }
}
